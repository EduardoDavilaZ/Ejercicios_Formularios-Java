package chk;

import javax.swing.JTextField;

public class Validar {

	public Validar() {
	}
	
	public String validarIp(JTextField[] jtfIp) {
	    String ip = "";
	    for (int i = 0; i < 4; i++) {
	        String aux = jtfIp[i].getText();
	        
	        // Validar que la longitud esté entre 1 y 3 caracteres y que contenga solo números
	        if (aux.length() > 0 && aux.length() <= 3 && aux.matches("\\d+")) {
	            while (aux.length() < 3) {
	                aux = "0" + aux; // Completa con ceros hasta tener 3 caracteres
	            }
	            ip = ip + aux;
	        } else {
	            return ""; // Retorna una cadena vacía en caso de error
	        }
	    }
	    
	    return ip; // Retorna la IP completa de 12 caracteres
	}

}

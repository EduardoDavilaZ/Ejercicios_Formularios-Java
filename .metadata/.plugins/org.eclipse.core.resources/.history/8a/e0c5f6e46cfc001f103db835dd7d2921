package chk;

import javax.swing.JTextField;

public class Validar {

	public Validar() {
	}
	
	public String validarIp(JTextField[] jtfIp) {
	    String ip = "";
	    for (int i = 0; i < 4; i++) {
	        String aux = jtfIp[i].getText();
	        
	        if (aux.length() > 0 && aux.length() <= 3 && aux.matches("\\d+")) {
	            while (aux.length() < 3) {
	                aux = "0" + aux;
	            }
	            ip = ip + aux;
	        } else {
	            return null;
	        }
	    }
	    
	    return ip;
	}

}
